@import url('https://fonts.googleapis.com/css2?family=Roboto&display=swap');

* {
    margin: 0;
}

#photos {
    background: {{ .Config.BgColor }};
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
}

#photos .item {
    width: 25%;

    outline: {{ .Config.Border }} solid {{ .Config.BgColor }};
}

#photos .period-separator {
    font-size: 1.9em;
    font-weight: bold;
    text-align: center;
    color: {{ .Config.FontColor }};

    display: flex;
    justify-content: center;
    align-content: center;
    flex-direction: column;

    font-family: 'Roboto', sans-serif;
}

#photos img {
    width: 100%;
    height: 100%;
}

#photos a:hover {
    cursor: pointer;
}

@media (max-width: 1400px) {
    #photos a {
        width: 25%;
    }
}

@media (max-width: 1000px) {
    #photos a {
        width: 33.33%;
    }
}

@media (max-width: 800px) {
    #photos a {
        width: 50%;
    }
}

@media (max-width: 600px) {
    #photos a {
        width: 100%;
    }
}