<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <title>{{ .Config.Title }} - {{ .Album.Name }}</title>

    <link rel="icon" type="image/png" href="{{ $.Config.URL }}/favicon.png"/>

    <link rel="stylesheet" type="text/css" href="{{ $.Config.URL }}/{{ $.Album.Name }}/index.css">

    <!-- GLightbox -->
    <link rel="stylesheet" href="{{ $.Config.URL }}/glightbox.min.css"/>
    <script src="{{ $.Config.URL }}/glightbox.min.js"></script>

    <meta property="og:title" content="{{ .Config.Title }} - {{ .Album.Name }}"/>
    <meta property="og:type" content="website"/>
    <meta property="og:image"
          content="{{ .Config.URL }}/{{ getAlbumCover .Album }}"/>

    <script type="text/javascript">
        document.addEventListener('DOMContentLoaded', function (event) {
            const lightbox = GLightbox();
        });
    </script>
</head>
<body>
<section id="photos">
    {{ range $i, $photo := .Album.Photos }}
        {{ if $.Config.MonthSeparator }}
            {{ if not (isSameMonth $.Album.Photos $i) }}
                <div class="item period-separator">
                    {{ $photo.ShootingDate.Month.String }} {{ $photo.ShootingDate.Year }}
                </div>
            {{ end }}
        {{ end }}

        <div class="item">
            <a href="{{ $.Config.URL }}/{{ $.Album.Name }}/{{ $photo.PhotoPath }}" class="glightbox">
                <img src="{{ $.Config.URL }}/{{ $.Album.Name }}/{{ $photo.ThumbnailPath }}"/>
            </a>
        </div>
    {{ end }}
</section>
</body>
</html>